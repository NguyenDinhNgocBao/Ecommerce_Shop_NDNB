@model ContactModel

<div class="row">
    <div class="col-sm-5 col-md-5">
        @Html.Raw(Model.Description)
    </div>
    <div class="col-sm-4">
        <div class="address">
            <h5><b>Name: @Model.Name</b></h5>
            <h5>Email: @Model.Email</h5>
            <h5>@Model.PhoneNumber</h5>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="fb-page" 
            data-href="https://www.facebook.com/ngoc.bao.958032" 
            data-tabs="message" 
            data-width="100%"
            data-height="200px" 
            data-small-header="true" 
            data-adapt-container-width="true" 
            data-hide-cover="false" 
            data-show-facepile="false"></div>
    </div>
</div>