@model UserModel
@{
	ViewData["Title"] = "Register User";
}
<section>
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>New User Signup!</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Create" asp-controller="Account">
						<div class="form-group">
							<label>UserName</label>
							<input class="form-control" asp-for="UserName" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Email</label>
							<input class="form-control" asp-for="Email" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input class="form-control" asp-for="Password" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>

						<button class="btn btn-default">Login</button>
					</form>
				</div><!--/sign up form-->
			</div>
			<a asp-action="Login" asp-controller="Account">Đăng Nhập</a>
		</div>
	</div>
</section><!--/form-->
