@model BrandModel;
@{
    ViewData["title"] = "Update Brand";
    var successMessage = TempData["SuccessMessage"] as string;
}
<form asp-action="Update" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
    <h1>UPDATE</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3 form-group">
        <label class="form-label fw-semibold">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
    <div class="mb-3 form-group">
        <label class="form-label fw-semibold">Description</label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger" />
    </div>
    <div class="mb-3 form-group">
        <label class="form-label fw-semibold">Status</label>
        <select asp-for="Status" class="form-select">
            <option value="1">Show</option>
            <option value="0">Hide</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary fw-bold px-4">Submit</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Back to List</a>
    </div>
</form>


