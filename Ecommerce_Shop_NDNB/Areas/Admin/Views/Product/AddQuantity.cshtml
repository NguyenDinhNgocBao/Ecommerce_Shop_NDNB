@model ProductQuantityModel;
@{
    ViewData["title"] = "Create Product Quantity";
    var totalQuantity = 0;
    var key = 0;
}
<form asp-action="StoreProductQuantity" asp-controller="Product" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
    <input type="hidden" name="ProductId" value="@ViewBag.Id"/>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3 form-group">
        <label class="form-label fw-semibold">Product Quantity</label>
        <input min="1" value="1" max="500" class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger" />
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary fw-bold px-4">Submit</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Back to List</a>
    </div>
</form>
<h3>Existing Product Quantities</h3>
<table class="table table-striped"> 
    <thead>
        <tr>
            <th>Key</th>
            <th>Quantity added</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var productQuantity in ViewBag.ProductByQuantity)
        {
            totalQuantity += productQuantity.Quantity;
            <tr>
                <td>@key</td>
                <td>@productQuantity.Quantity</td>
                <td>@productQuantity.DateCreate</td>
            </tr>
            key++;
        }
        <tr>
            <td><h2>Total Quantities: @totalQuantity</h2></td>
        </tr>
    </tbody>
</table>




